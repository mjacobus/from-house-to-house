<%= render :partial => 'list_records_title', locals: { model: City } %>

<table class="table table-striped">
  <%= render partial: 'table_header', locals: { model: City, titles: [:name, :short] } %>
<% @cities.each do |city| %>
  <tr>
    <td><%= city.name %></td>
    <td><%= city.short %></td>
    <td>
      <%= render partial: 'table_actions', locals: { record: city } %>
    </td>
  </tr>
<% end %>
</table>

<%= paginate(@cities) %>
