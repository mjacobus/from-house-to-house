<%= simple_form_for [namespace, @home], :html => {:class => 'form-horizontal' } do |f| %>
  <%= f.error_notification %>
  <%= f.association :territory, label_method: :name, value_method: :id %>
  <%= f.association :area, label_method: :name, value_method: :id %>
  <%= f.input :address_street %>
  <%= f.input :address_number %>

  <%= render :partial => 'form_actions', locals: { form: f } %>
<% end %>
